#!/bin/sh

# Description : Ansible installer script
#
# Author : Jorge Barrientos Poisson
#
# ChangeLog : 
# 2021.11.08 | 1st quick draft. Debian only

ANSIBLE_REPO_URL="deb http://ppa.launchpad.net/ansible/ansible/ubuntu focal main"
ANSIBLE_REPO_APT="/etc/apt/sources.list.d/ansible.list"

if [ ! -r $APT ];
then
	echo $ANSIBLE_REPO_URL | sudo tee $ANSIBLE_REPO_APT > /dev/null && \
	printf "\e[32m-->\e[0m Adding Ansible repository" && \
	SUCCESS=YES
fi

debian_ansible_install() {
	if [ -r $ANSIBLE_REPO_APT ];
	then
		sudo apt-key adv --keyserver keyserver.ubuntu.com --recv-keys 93C4A3FD7BB9C367
		sudo apt update
		sudo apt install ansible
	fi
}
